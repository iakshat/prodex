        script(src="/script/jquery.js")
        script.
            $("#submit").on("click", function () {

                var dataToSend = {};
                dataToSend.name = $("#name").val();;
                dataToSend.details = $("#details").val();
                dataToSend.summary = $("#summary").val();
                dataToSend.budget = $("#budget").val();

                $.ajax({
                    method: "POST",
                    url: "/new-project",
                    data: dataToSend,
                    success: (data) => {

                        //- console.log(data);
                        $("#output").text(data);
                        setTimeout(5000);
                        window.location.href = "/";

                    }
                })

            })


